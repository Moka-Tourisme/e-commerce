<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_shipping']" position="inside">
                <field name="is_withdrawal" invisible="1"/>
                <field name="commitment_hour_from"
                       attrs="{'invisible': [('is_withdrawal', '=', False)]}"/>
                <field name="commitment_hour_to"
                       attrs="{'invisible': [('is_withdrawal', '=', False)]}"/>
                <field name="withdrawal_point_id"
                       attrs="{'invisible': [('is_withdrawal', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>