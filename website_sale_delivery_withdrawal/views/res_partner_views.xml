<odoo>
    <data>
        <record id="view_partner_property_withdrawal_inherit" model="ir.ui.view">
            <field name="name">res.partner.purchase.property.withdrawal.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">48</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='purchase']" position="inside">
                    <label for="mon" string="Pickup order days"/>
                    <div>
                        <field name="mon" invisible="1"/>
                        <widget
                                name="week_days"
                        />
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>